                    </ul>
                </div>
            </div>
        </div>

    </section>

    <section id="maincontent">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <article>
                        <div class="heading">
                            <h3 id="titre"><strong>Change your Credentials</strong></h3>
                        </div>
                        <div class="clearfix">
                        </div>
                        <div class="row">

                            <div class="formulaire" id="formule">
                                <form method="post" action="/Student/first">
                                    <label for="fname">New username</label>
                                    <input type="text" id="fname" name="username" placeholder="Your username" required>

                                    <label for="lname">New password</label>
                                    <input type="password" id="lname" name="password" placeholder="Your password" required >

                                    <input type="submit" value="Submit">
                                </form>
                            </div>



                        </div>
                    </article>
                    <!-- end article full post -->
                </div>
            </div>
        </div>
    </section>
